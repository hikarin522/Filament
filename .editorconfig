root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.xml]
indent_size = 2

[*.{csproj,props,targets}]
indent_size = 2

[*.sln]
charset = utf-8-bom
indent_style = tab
